<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="myBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller">
    <MenuBar fx:id="menuBar">
        <Menu mnemonicParsing="false" text="Operations">
            <MenuItem mnemonicParsing="false" onAction="#changeScale" text="Change Scale" />
            <MenuItem mnemonicParsing="false" onAction="#clearAll" text="Clear All" />
            <MenuItem mnemonicParsing="false" onAction="#exitAll" text="Exit" />
        </Menu>
        <Menu mnemonicParsing="false" text="Transform">
            <MenuItem mnemonicParsing="false" text="Translation" onAction="#doTranslation"/>
            <MenuItem mnemonicParsing="false" text="Normal Rotation" onAction="#doRotation"  />
            <MenuItem mnemonicParsing="false" text="Normal Scaling" onAction="#doScaling" />
            <MenuItem mnemonicParsing="false" text="Shear" onAction="#doShear" />
            <MenuItem mnemonicParsing="false" text="Reflection" onAction="#doReflection" />
        </Menu>
    </MenuBar>

    <Pane fx:id="container">
        <Canvas fx:id="myCanvas" height="700" width="1276"/>
    </Pane>

</VBox>
