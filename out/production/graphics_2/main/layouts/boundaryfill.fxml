<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.BoundaryFillController">
    <children>
        <Label text="8-Point Connected Fill">
            <font>
                <Font name="Roboto" size="24.0" />
            </font>
            <VBox.margin>
                <Insets left="2.0" />
            </VBox.margin>
        </Label>
        <Label text="Choose a fill color">
            <font>
                <Font name="Roboto" size="18.0" />
            </font>
            <padding>
                <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
            </padding>
            <VBox.margin>
                <Insets left="35.0" right="25.0" top="3.0" />
            </VBox.margin>
        </Label>
        <ColorPicker fx:id="targetColor" onAction="#doBoundaryFill">
            <VBox.margin>
                <Insets left="42.0" top="10.0" />
            </VBox.margin>
        </ColorPicker>
        <HBox>
            <children>
                <Button mnemonicParsing="false" prefWidth="63.0" text="Ok">
                    <HBox.margin>
                        <Insets bottom="10.0" left="42.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Cancel" onAction="#closeMe">
                    <HBox.margin>
                        <Insets bottom="10.0" left="15.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
